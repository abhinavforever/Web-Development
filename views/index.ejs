<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Awesome Blog</title>
    <link rel="stylesheet" href="../styles/main.css">

</head>

<body>
    
    <%- include("partials/header.ejs") %>
        <!-- Form to create a new blog post -->
        <h1>Create a new blog</h1>

        <form id="blogForm">


            <label for="title">Title:</label>
            <input type="title" id="title" name="title" required>
            <hr>
            <label for="content">Content:</label>
            <textarea type="content" id="content" name="content" required></textarea>
            <hr>
            <label for="author">Author:</label>
            <input type="author" id="author" name="author" required>
            <button type="button" onclick={submitBlog()}>Submit</button>
        </form>

        <%- include("partials/footer.ejs") %>

        <script src="../js/index2.js"></script>
</body>

</html>